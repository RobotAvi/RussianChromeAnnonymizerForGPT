{
  "manifest_version": 3,
  "name": "Russian Clipboard Anonymizer",
  "description": "Анонимизирует и восстанавливает PII в русском тексте прямо из буфера обмена. Автор: https://t.me/ai_for_robot",
  "version": "1.0.0",
  "icons": {
    "16":  "icons/anon16.png",
    "32":  "icons/anon32.png",
    "48":  "icons/anon48.png",
    "128": "icons/anon128.png"
  },
  "permissions": [
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16":  "icons/anon16.png",
      "32":  "icons/anon32.png",
      "48":  "icons/anon48.png",
      "128": "icons/anon128.png"
    }
  },
  "host_permissions": ["<all_urls>"]
}
